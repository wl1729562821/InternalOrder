<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26px"
        android:textColor="#373737"
        android:layout_marginTop="27px"
        android:layout_marginBottom="27px"
        android:layout_marginLeft="30px"
        android:id="@+id/deliveryorder_id"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        android:layout_marginLeft="30px"
        android:id="@+id/deliveryorder_line"
        android:layout_below="@+id/deliveryorder_id"
        android:layout_marginRight="30px"/>
    
    <ImageView
        android:layout_marginTop="20px"
        android:layout_marginRight="38px"
        android:layout_alignParentRight="true"
        android:layout_width="60px"
        android:id="@+id/img"
        android:layout_height="60px"
        android:background="@mipmap/rent"
        android:layout_below="@id/deliveryorder_line"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/deliveryorder_line">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:textSize="32px"
            android:textColor="#373737"
            android:layout_marginTop="20px"
            android:layout_marginLeft="30px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:layout_marginBottom="24px"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20px"
                android:layout_height="25px"
                android:background="@mipmap/home_one_location"
                android:layout_marginLeft="30px"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="null"
                android:textSize="24px"
                android:textColor="#7d7d7d"
                android:layout_marginLeft="12px"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/address"
            android:textSize="28px"
            android:textColor="#373737"
            android:layout_marginLeft="30px"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:textSize="24px"
            android:textColor="#a0a0a0"
            android:layout_marginTop="24px"
            android:layout_marginLeft="30px"
            android:layout_marginBottom="28px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="#f5f5f5"/>

    </LinearLayout>

</RelativeLayout>