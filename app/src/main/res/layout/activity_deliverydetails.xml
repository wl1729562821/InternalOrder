<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <include android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/toolbar"
        android:id="@id/toolbar"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/refresh_layout"
        android:layout_above="@id/footer"
        android:layout_below="@id/toolbar">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:background="#f0f0f0"
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:background="#fff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginTop="50px"
                                android:layout_marginBottom="50px"
                                android:layout_marginLeft="30px"
                                android:layout_width="150px"
                                android:layout_height="150px"
                                android:text="@string/zu"
                                android:textColor="#fff"
                                android:textSize="50px"
                                android:gravity="center"

                                android:background="@drawable/round2"
                                android:id="@+id/deliveryorder_img"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/deliveryorder_img"
                                android:layout_marginTop="21px"
                                android:textSize="36px"
                                android:id="@+id/name"
                                android:textColor="#373737"
                                android:layout_marginLeft="51px"
                                android:layout_marginRight="140px"
                                android:layout_toRightOf="@id/deliveryorder_img"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@id/deliveryorder_img"
                                android:layout_marginBottom="21px"
                                android:textSize="26px"
                                android:paddingTop="9px"
                                android:paddingBottom="9px"
                                android:paddingLeft="27px"
                                android:paddingRight="27px"
                                android:text="@string/language_en"
                                android:background="@drawable/resaleorder_bt"
                                android:textColor="#00b660"
                                android:layout_marginLeft="51px"
                                android:id="@+id/language"
                                android:layout_toRightOf="@id/deliveryorder_img"/>

                            <ImageView
                                android:id="@+id/phone_bt"
                                android:layout_width="60px"
                                android:layout_height="60px"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="40px"
                                android:background="@mipmap/deliverydetails_phone"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:background="#eaf9f2"/>

                        <LinearLayout
                            android:paddingLeft="30px"
                            android:paddingRight="30px"
                            android:paddingTop="31px"
                            android:background="#fff"
                            android:paddingBottom="31px"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#373737"
                                android:textSize="30px"
                                android:text="@string/deliverydetails_tv1"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:paddingLeft="30px"
                                android:gravity="right|center_vertical"
                                android:layout_height="wrap_content"
                                android:textColor="#7d7d7d"
                                android:textSize="30px"
                                android:text=""
                                android:singleLine="true"
                                android:id="@+id/fy_type"/>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#f5f5f5"
                            />
                        <LinearLayout
                            android:paddingLeft="30px"
                            android:paddingRight="30px"
                            android:paddingTop="31px"
                            android:background="#fff"
                            android:paddingBottom="31px"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#373737"
                                android:textSize="30px"
                                android:text="@string/deliverydetails_tv2"/>

                            <TextView
                                android:singleLine="true"
                                android:layout_width="match_parent"
                                android:paddingLeft="30px"
                                android:gravity="right|center_vertical"
                                android:layout_height="wrap_content"
                                android:textColor="#7d7d7d"
                                android:textSize="30px"
                                android:id="@+id/time"/>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#f5f5f5"
                            />
                        <LinearLayout
                            android:paddingLeft="30px"
                            android:paddingRight="30px"
                            android:paddingTop="31px"
                            android:paddingBottom="31px"
                            android:background="#fff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#373737"
                                android:textSize="30px"
                                android:text="@string/deliverydetails_tv3"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:paddingLeft="30px"
                                android:gravity="right|center_vertical"
                                android:layout_height="wrap_content"
                                android:textColor="#7d7d7d"
                                android:singleLine="true"
                                android:textSize="30px"
                                android:id="@+id/address_tv"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="41px">

                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_marginLeft="13px"
                                android:layout_marginRight="0px"
                                android:layout_height="210px"
                                android:orientation="vertical"
                                android:background="@mipmap/home_five_rect">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="35px"
                                    android:layout_marginTop="33px"
                                    android:text="@string/deliverydetails_tv4"
                                    android:textColor="#373737"
                                    android:singleLine="true"
                                    android:textSize="26px" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#FFE21010"
                                    android:layout_centerInParent="true"
                                    android:textSize="32px"
                                    android:layout_marginBottom="65px"
                                    android:layout_alignParentBottom="true"
                                    android:id="@+id/endTime" />

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_marginRight="13px"
                                android:layout_height="210px"
                                android:orientation="vertical"
                                android:background="@mipmap/home_five_rect">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#373737"
                                    android:textSize="26px"
                                    android:singleLine="true"
                                    android:text="@string/deliverydetails_tv5"
                                    android:layout_marginLeft="35px"
                                    android:layout_marginTop="33px"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#FFE21010"
                                    android:layout_centerInParent="true"
                                    android:textSize="32px"
                                    android:layout_marginBottom="65px"
                                    android:layout_alignParentBottom="true"
                                    android:id="@+id/startTime" />

                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="71px"
                            android:layout_marginBottom="243px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:background="@drawable/resaleorder_bt"
                                android:textSize="30px"
                                android:text="@string/update_time"
                                android:paddingTop="24px"
                                android:gravity="center"
                                android:id="@+id/update_bt1"
                                android:textColor="#FF00B660"
                                android:layout_marginLeft="60px"
                                android:layout_marginRight="45px"
                                android:paddingBottom="24px"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:background="@drawable/resaleorder_bt"
                                android:textSize="30px"
                                android:text="@string/update_address"
                                android:paddingTop="24px"
                                android:gravity="center"
                                android:id="@+id/update_bt2"
                                android:textColor="#FF00B660"
                                android:layout_marginLeft="45px"
                                android:layout_marginRight="60px"
                                android:paddingBottom="24px"
                                />

                        </LinearLayout>

                        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:map="http://schemas.android.com/apk/res-auto"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_marginTop="30px"
                            android:layout_marginLeft="30px"
                            android:layout_marginRight="30px"
                            android:layout_marginBottom="40px"
                            tools:context=".ui.activity.MapsActivity" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>


        </RelativeLayout>

    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/footer"
        android:orientation="vertical"
        android:background="#f5f5f5"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingBottom="15px"
            android:paddingTop="15px"
            android:id="@+id/deliverydetails_footer">

            <TextView
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/resaleorder_bt"
                android:textSize="30px"
                android:text="@string/deliverydetails_tv6"
                android:paddingTop="31px"
                android:paddingBottom="31px"
                android:gravity="center"
                android:id="@+id/bottom_bt1"
                android:textColor="#FF00B660"
                android:layout_marginLeft="30px"
                android:layout_marginRight="11px"
                />
            <TextView
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/deliverydetails_bt2"
                android:textSize="30px"
                android:text="@string/deliverydetails_tv7"
                android:paddingTop="31px"
                android:paddingBottom="31px"
                android:gravity="center"
                android:id="@+id/bottom_bt2"
                android:textColor="#FFF"
                />
            <TextView
                android:singleLine="true"
                android:id="@+id/bottom_bt3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/deliverydetails_bt3"
                android:textSize="30px"
                android:text="@string/deliverydetails_tv8"
                android:paddingTop="31px"
                android:paddingBottom="31px"
                android:gravity="center"
                android:textColor="#FFF"
                android:layout_marginLeft="11px"
                android:layout_marginRight="30px"
                />
        </LinearLayout>
    </LinearLayout>

    <cn.yc.library.view.DragFloatActionButton
        android:layout_gravity="right"
        android:background="@mipmap/img1"
        android:layout_height="118px"
        android:layout_width="118px"
        android:layout_alignParentRight="true"
        android:id="@+id/dial_phone"
        android:layout_marginRight="26px"
        android:layout_marginBottom="40px"
        android:layout_above="@id/footer"
        />

</RelativeLayout>