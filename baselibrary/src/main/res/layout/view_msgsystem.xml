<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="30px"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:text="是否立即升级到1.x版本"
            android:id="@+id/title"
            android:textColor="#3c3c3c"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="36px"
        android:textColor="#6e6e6e"
        android:paddingLeft="30px"
        android:textSize="28px"
        android:paddingRight="30px"
        android:text="修复了若干个体验问题"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="36px"
        android:textColor="#6e6e6e"
        android:paddingLeft="30px"
        android:textSize="28px"
        android:paddingRight="30px"
        android:text="xxxxxxx"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="36px"
        android:layout_marginLeft="30px"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingTop="20px"
        android:paddingBottom="20px"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8px"
            android:paddingBottom="8px"
            android:textColor="#6e6e6e"
            android:paddingLeft="19px"
            android:textSize="22px"
            android:paddingRight="18px"
            android:background="@drawable/msg_system_cancel"
            android:text="@string/cancel"
            android:id="@+id/cancel"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8px"
            android:paddingBottom="8px"
            android:textColor="#6e6e6e"
            android:paddingLeft="19px"
            android:textSize="22px"
            android:paddingRight="18px"
            android:layout_marginLeft="15px"
            android:background="@drawable/msg_system_az"
            android:text="@string/heihei_tv10"
            android:id="@+id/bt"/>

    </LinearLayout>
</LinearLayout>