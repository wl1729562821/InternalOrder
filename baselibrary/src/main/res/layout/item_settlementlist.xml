<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f0f0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textSize="20px"
        android:textColor="#fafafa"
        android:paddingTop="5px"
        android:id="@+id/time_tv"
        android:paddingLeft="18px"
        android:paddingRight="18px"
        android:background="@drawable/bg"
        android:layout_marginBottom="20px"
        android:layout_marginTop="20px"
        android:text="2018年3月3日 12:24:00"
        android:paddingBottom="5px"
        android:gravity="center"/>
    <LinearLayout
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32px"
            android:textColor="#373737"
            android:paddingTop="34px"
            android:id="@+id/name_tv"
            android:paddingBottom="34px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:text="东城民居"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:textColor="#bfbfbf"
            android:paddingTop="50px"
            android:text="@string/settlement_4"
            android:paddingBottom="20px"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32px"
            android:textColor="#373737"
            android:text=""
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:id="@+id/id_tv"
            android:layout_gravity="center"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5"
            android:layout_marginTop="36px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="28px"
                android:textColor="#373737"
                android:paddingTop="36px"
                android:paddingBottom="36px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="@string/heihei_tv60"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_width="12px"
                android:layout_height="22px"
                android:background="@mipmap/enter"
                android:layout_gravity="center"
                android:layout_marginRight="20px"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>