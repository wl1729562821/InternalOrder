<?xml version="1.0" encoding="utf-8"?>
<com.ysgj.percent.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <include android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"
        android:id="@id/toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="4%w"
        app:layout_marginTopPercent="3.74%w"
        android:textColor="#5f5f5f"
        android:layout_centerVertical="true"
        android:textSize="16.5sp"
        android:text="@string/app_tv20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="4%w"
        app:layout_marginBottomPercent="8.6%w"
        android:textColor="#55cc91"
        android:layout_gravity="center"
        android:textSize="23sp"
        android:text="00777" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="4%w"
        app:layout_marginTopPercent="3.74%w"
        android:textColor="#5f5f5f"
        android:layout_centerVertical="true"
        android:textSize="16.5sp"
        android:text="@string/app_tv21" />

    <com.ysgj.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="6.2%w"
        app:layout_marginBottomPercent="2.8%w">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:textColor="#55cc91"
            android:layout_gravity="center"
            android:textSize="13.5sp"
            android:gravity="center"
            android:text="25" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:textColor="#55cc91"
            android:layout_gravity="center"
            android:textSize="13.5sp"
            android:gravity="center"
            android:text="2500" />

    </com.ysgj.percent.PercentLinearLayout>
    <com.ysgj.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_paddingBottomPercent="7.2%w">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:layout_gravity="center"
            android:textSize="13.5sp"
            android:gravity="center"
            android:text="@string/app_tv22" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:layout_gravity="center"
            android:textSize="13.5sp"
            android:gravity="center"
            android:text="@string/app_tv23" />

    </com.ysgj.percent.PercentLinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f0f0"/>
</com.ysgj.percent.PercentLinearLayout>