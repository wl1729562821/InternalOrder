<?xml version="1.0" encoding="utf-8"?>
<com.ysgj.percent.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <include android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"
        android:id="@id/toolbar"/>

    <TextView
        android:layout_width="match_parent"
        app:layout_heightPercent="13.33%w"
        android:background="@null"
        android:hint="phone number"
        app:layout_paddingLeftPercent="4%w"
        app:layout_paddingRightPercent="4%w"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:textColor="#bfbfbf"
        android:textColorHint="#bfbfbf"
        android:id="@+id/phone"
        android:textCursorDrawable="@drawable/edit_cursor"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        />

    <com.ysgj.percent.PercentLinearLayout
        android:layout_width="match_parent"
        app:layout_heightPercent="13.33%w">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            app:layout_heightPercent="13.33%w"
            android:background="@null"
            android:hint="@string/heihei_tv40"
            app:layout_paddingLeftPercent="4%w"
            app:layout_paddingRightPercent="4%w"
            android:gravity="center_vertical"
            android:textColorHint="#bfbfbf"
            android:textColor="#373737"
            android:textSize="15sp"
            android:id="@+id/forget_code"
            android:textCursorDrawable="@drawable/edit_cursor"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgetpwd_tv2"
            app:layout_marginRightPercent="4%w"
            app:layout_paddingLeftPercent="2.2%w"
            app:layout_paddingRightPercent="2.2%w"
            app:layout_paddingTopPercent="1.1%w"
            app:layout_paddingBottomPercent="1.1%w"
            android:textColor="#00b660"
            android:textSize="13.5sp"
            android:maxLength="12"
            android:id="@+id/send_code"
            android:background="@drawable/resaleorder_bt"/>



    </com.ysgj.percent.PercentLinearLayout>

    <com.ysgj.percent.PercentLinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f0f0"
        >

        <TextView
            app:layout_widthPercent="92%w"
            android:layout_height="wrap_content"
            app:layout_paddingTopPercent="3.3%w"
            app:layout_paddingBottomPercent="3.3%w"
            android:textColor="#fff"
            android:layout_gravity="center"
            app:layout_marginTopPercent="12%w"
            android:background="@drawable/update_pwd_bt"
            android:textSize="15.5sp"
            android:text="@string/xyb"
            android:id="@+id/forgetpwd_bt"
            android:gravity="center"
            />
    </com.ysgj.percent.PercentLinearLayout>



</com.ysgj.percent.PercentLinearLayout>